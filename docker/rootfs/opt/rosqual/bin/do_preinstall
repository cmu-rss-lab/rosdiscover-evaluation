#!/bin/bash
set -eu

PREINSTALLL_FILENAME=/.dockerinstall/preinstall.sh

if [[ -f "${PREINSTALLL_FILENAME}" ]]; then
  echo "running preinstall step..."
  apt-get update
  /bin/bash "${PREINSTALLL_FILENAME}"
  apt-get clean
  rm -rf /var/lib/apt/lists/*
else
  echo "skipping preinstall step [no preinstall.sh]"
fi
